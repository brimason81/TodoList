@model TodoItem
@{
	ViewData["Title"] = "Add Todo Item";
}
@{
	<form method="post" asp-action="Add">
		<div class="border p-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group row">
				<center><h2>Add Item</h2></center>
			</div>
			<div class="row">
				<div class="col-2"></div>
				<div class="col-8">
					<div class="form-group row m-3">
						<div class="col-12">
							<input id="text-input" asp-for="Item" type="text" class="form-control" autofocus>
							<span asp-validation-for="Item" class="alert-danger"></span>
						</div>
					</div>
					<div class="form-group row m-3">
						<div class="col-6">
							<input style="width: 100%;" type="submit" value="Add" class="btn btn-primary">
						</div>
						<div class="col-6">
							<a style="width: 100%;" class="btn btn-success" asp-controller="Todo" asp-action="Index">Home</a>	
						</div>
					</div>
				</div>
				<div class="col-2"></div>
			</div>
		</div>
	</form>
}
@section Scripts {
	@{ <partial name="_ValidationScriptsPartial"/>}
}
<script>
	$(function () {
		$.post().done(function () {
			$("#text-input").val("");
		})
	})
</script>
